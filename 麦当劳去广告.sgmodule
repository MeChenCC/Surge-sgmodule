#!name=麦当劳去广告
#!desc=移除开屏广告，弹窗广告和首页热门活动
#!category=APP Adblock
#!tag=APP Adblock

[Map Local]
#开屏广告
^https:\/\/api\.mcd\.cn\/bff\/portal\/home\/splash data-type=text data="{}" status-code=200
#弹窗广告
^https:\/\/api\.mcd\.cn\/bff\/portal\/richpop data-type=text data="{}" status-code=200
首页热门活动
^https:\/\/api\.mcd\.cn\/bff\/portal\/home\/hotActivity data-type=text data="{}" status-code=200

[MITM]
hostname = %APPEND% api.mcd.cn
